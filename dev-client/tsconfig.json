{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "paths": {
      "terraso-mobile-client/*": ["./src/*"],
      "@testing/*": ["./jest/*"]
    }
  },
  "include": ["src", "__tests__", "jest"],
  "exclude": ["dist"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
